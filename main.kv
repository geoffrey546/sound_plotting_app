Logic:
   BoxLayout:
      orientation:"vertical"
      BoxLayout:
         size_hint: [1,.8]
         Graph:
            id: graph
            xlabel: "Amplitude"
            ylabel: "Sample"
            x_grid_label : True
            y_grid_label : True
            background_color : 0.7,0.9,0.1,1
            x_ticks_minor : 10
            x_ticks_major : 5
            color: 1,1,0,1
            ymax: 5000
            ymin: 0
            border_color:1,1,0,1

      BoxLayout:
         orientation:"horizontal"
         size_hint:[1,0.1]
         Button:
            text:"START"
            bold: True
            on_press:root.start()
         Button:
            text:"STOP"
